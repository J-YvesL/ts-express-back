{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}
